@model WebApplication1.Areas.Simple.ViewModels.SimplePaymentsIndexViewModel
@{
    ViewData["Title"] = "Платежи";
}

<div class="payment-history-page">
    <div class="page-header">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
            <div>
                <h1 class="page-title mb-1">Платежи</h1>
                <p class="page-subtitle mb-0">История всех платежей Simple</p>
            </div>
            <a class="btn btn-primary btn-create-invoice d-inline-flex align-items-center" href="@Model.CreatePaymentUrl">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-2">
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="currentColor" />
                </svg>
                Создать платёж
            </a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.FlashMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.FlashMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @await Html.PartialAsync("~/Modules/GenericModule/Views/Default.cshtml", Model.Table)
</div>
