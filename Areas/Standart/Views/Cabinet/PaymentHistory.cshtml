@model List<WebApplication1.Models.DBModels.Transaction>
@{
    ViewData["Title"] = "История платежей";
}

<div class="payment-history-page">
    <div class="page-header">
        <h1 class="page-title">История платежей</h1>
        <p class="page-subtitle">Все транзакции организации</p>
    </div>

    <div class="transactions-container">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="transactions-table">
                    <thead>
                        <tr>
                            <th>Дата</th>
                            <th>Сумма</th>                            
                            <th>Итого</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model)
                        {
                            <tr class="transaction-row">
                                <td class="transaction-date">
                                    @if (transaction.TransactionDate.HasValue)
                                    {
                                        @transaction.TransactionDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="transaction-amount">
                                    @if (transaction.Summ.HasValue)
                                    {
                                        @((transaction.Summ.Value / 100).ToString("N2")) <span>сом</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                               
                                <td class="transaction-total">
                                    @if (transaction.TransactionSumm.HasValue)
                                    {
                                        @((transaction.TransactionSumm.Value / 100).ToString("N2")) <span>сом</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="transaction-status">
                                    @if (transaction.TransactionStatus == "success")
                                    {
                                        <span class="status-badge status-success">Успешно</span>
                                    }
                                    else if (transaction.TransactionStatus == "error")
                                    {
                                        <span class="status-badge status-error">Ошибка</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-unknown">@transaction.TransactionStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86c-1.77-.45-2.34-.94-2.34-1.67 0-.84.79-1.43 2.1-1.43 1.38 0 1.9.66 1.94 1.64h1.71c-.05-1.34-.87-2.57-2.49-2.97V5H10.9v1.69c-1.51.32-2.72 1.3-2.72 2.81 0 1.79 1.49 2.69 3.66 3.21 1.95.46 2.34 1.15 2.34 1.87 0 .53-.39 1.39-2.1 1.39-1.6 0-2.23-.72-2.32-1.64H8.04c.1 1.7 1.36 2.66 2.86 2.97V19h2.34v-1.67c1.52-.29 2.72-1.16 2.73-2.77-.01-2.2-1.9-2.96-3.66-3.42z" fill="currentColor"/>
                    </svg>
                </div>
                <h3 class="empty-state-title">Транзакций не найдено</h3>
                <p class="empty-state-description">У вас пока нет транзакций</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/web/kindergarten/js/payment-history.js" asp-append-version="true"></script>
}

